.node {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
}

/* 右边栏方向 */
.self {  flex-direction: row;}
/* 左边栏方向 */
.other {  flex-direction: row-reverse;}

/* 时间 */
.date{
  display: flex;
  justify-content: center;
  align-items: center;
}
.date label{
  background: #d9d9d9;
  border-radius: 3px;
  padding: 4px 10px;
  color: #fff;
  font-size: 12px;
  line-height: 12px;
}

/* 头像、内容、网络错误 */
.logo{
   width: 160rpx;
   display: flex;
   justify-content: center;
}
.logo image{    
    width: 80rpx;
    height: 80rpx;
}
.warm{
    margin: 4px;
}
.triangle image{
  width: 20rpx;
  height: 80rpx;
}
.content {
   width:100%;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}
.content image{
   width: 100%;
   height: 300rpx;
}
.content text{
    font-size: 11pt;
}



.footer {
  /* width: 96%; */
  /* height: 100rpx; */
  padding: 4px 8px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  /* background: #efeff4; */
  background-color: #fff;

}

.footinput {
    flex: 1;
    display: flex;
    justify-content: center; 
    align-items: center;  
    height: 30px; 
    border-bottom: 1rpx solid #ccc;
}

.footinput input {
  width: 100%;
}

.btn {
   width: 100rpx;
   height: 30px;  
  display: flex;
   border-radius: 10rpx;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}
.btn_scroll{
    color: #7a7a7a;
    margin-right: 8px;
    background: #dedede;
}
.no_scroll{ text-decoration :line-through }
.btn_send{
    color: #fff;
    margin-left: 8px;
    background: #17af0f;
}
.scroll_hover {
    color:rgba(255, 255, 255, 0.6) !important;
    background-color:#888;
}
.send_hover {
    color:rgba(255, 255, 255, 0.6) !important;
    background-color:#179B16;
}

