    color: yellow;
}

.menu{
    position: absolute;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.left{
    display: flex;
}
.icon{
    width: 32px;height: 32px;
}

.message{
    position: absolute;
    bottom: 30px;
    /* left:10px; */
     width:750rpx;
     text-align: left;
     display: flex;
     flex-direction: column-reverse;
}
.first{     opacity: 0.8;}
.seconde{     opacity: 0.5;}
.message .node{
    display: flex;
