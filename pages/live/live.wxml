<view wx:if="{{!isPusher}}">
    <!-- <view wx:if="{{room.style == ROOM_PREPARE}}">
        <template is="room_prepare" data="{{room}}" />
    </view>  -->
    <view >
        <xx-live-player feedback="{{feedback}}" src="{{room.player_url}}" height="400rpx"></xx-live-player> 
        <view class='bg'>        
            <xx-tab list="{{playerTab}}" bind:click="clickPlayerTab" colorunselect="#888" colorselect="#efa234" />
        </view>
        <view class='painter' wx:if="{{showPlayerPainter}}">
            <xx-painter  drawLine="{{drawLine}}" height="calc(100vh - 400rpx - 75px)" bg="{{bgImageUrl}}"  tool="{{false}}"/>
        </view>
        <xx-im feedback="{{feedback}}" height="calc(100vh - 400rpx - 45px)" catchsend="sendMsg" wx:if="{{showPlayerIM}}"></xx-im>             
    </view> 
</view>

<view wx:else>
    <view class='bg'>        
        <xx-tab list="{{pusherTab}}" bind:click="clickPusherTab" initindex="{{tagIndex}}" mode="scroll" colorunselect="#888" colorselect="#efa234" />
    </view>
    <xx-live-pusher src="{{room.pusher_url}}" height="400rpx" menu="{{showPusherMenu}}" wx:if="{{showPusher}}"></xx-live-pusher> 
    <xx-im feedback="{{feedback}}" height="calc(100vh - 400rpx - 45px)" catchsend="sendMsg" wx:if="{{showIM}}"></xx-im>   
    <xx-live-player feedback="{{feedback}}" src="{{room.player_url}}" height="400rpx" wx:if="{{showPlayer}}"></xx-live-player> 
    

    <xx-gallery catchchoice="choicePPT"  wx:if="{{showGallery}}" ></xx-gallery>
    <view class='painter'   wx:if="{{showPainter}}">
        <xx-painter height="calc(100vh - 400rpx - 75px)"
 catchcomplete="paintComplete" catchclear="paintClear" bg="{{bgImageUrl}}" drawLine="{{drawLine}}"></xx-painter>  
    </view>
    <!-- <template is="room_prepare" data="{{room}}" wx:if="{{showCover}}"/> -->
</view>


